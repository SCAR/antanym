citHeader("To cite antanym and the SCAR Composite Gazetteer in publications use:")

citEntry(entry = "Manual",
  title        = "Composite Gazetteer of Antarctica, Scientific Committee on Antarctic Research. Data obtained via the antanym R package: https://github.com/ropensci/antanym",
  author       = personList(person("Secretariat SCAR")),
  year         = paste0("1992, updated ", format(Sys.Date(), "%Y")),
  url          = "http://gcmd.nasa.gov/records/SCAR_Gazetteer.html",

  textVersion  =
  paste("Secretariat SCAR (1992 updated", format(Sys.Date(), "%Y)"),
        "Composite Gazetteer of Antarctica, Scientific Committee on Antarctic Research. GCMD Metadata (http://gcmd.nasa.gov/records/SCAR_Gazetteer.html)",
        "Data obtained via the antanym R package: ",
        "https://github.com/ropensci/antanym")
)
